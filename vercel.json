{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/cron/run-jobs.ts": {
      "maxDuration": 300
    },
    "api/cron/cleanup.ts": {
      "maxDuration": 60
    },
    "api/cron/url-shortening.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/run-jobs",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/url-shortening",
      "schedule": "*/5 * * * *"
    }
  ]
}