{
  "name": "od-scheduler",
  "version": "1.0.0",
  "description": "Open Dealer Scheduler Service - Manages data pull scheduling and monitoring",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm run build && doppler run -- node dist/src/dev-server.js",
    "dev:vercel": "vercel dev",
    "build": "tsc",
    "clean": "rm -rf dist",
    "deploy": "vercel --prod",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test:dealer-com": "doppler run -- node scripts/test-dealer-com-job-execution.mjs"
  },
  "dependencies": {
    "@adamehrheart/schema": "^0.1.6",
    "@adamehrheart/utils": "^0.1.0",
    "@supabase/supabase-js": "^2.55.0",
    "@types/next": "^8.0.7",
    "cheerio": "^1.1.2",
    "fast-xml-parser": "^5.2.5",
    "node-cron": "^3.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^3.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
